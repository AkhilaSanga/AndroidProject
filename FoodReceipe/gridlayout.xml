<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".GridLayout"
	android:orientation="vertical">

	<GridLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:rowCount="3"
		android:columnCount="2"
		android:layout_gravity="center">
		<ImageView
			android:id="@+id/img1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/southindian" />
		<ImageView
			android:id="@+id/img2"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/bhendi" />
		<Button
			android:id="@+id/b1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Idli-Dosa"
			android:background="#4CAF50" />
		<Button
			android:id="@+id/b2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Bhendi"
			android:background="#4CAF50" />
		<ImageView
			android:id="@+id/img3"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/paneer" />
		<ImageView
			android:id="@+id/img4"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/pulav" />
		<Button
			android:id="@+id/b3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Paneer"
			android:background="#4CAF50" />
		<Button
			android:id="@+id/b4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Pulav"
			android:background="#4CAF50" />
		<ImageView
			android:id="@+id/img5"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/puribhaji" />
		<ImageView
			android:id="@+id/img6"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/noodles" />
		<Button
			android:id="@+id/b1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Puri Bhaji"
			android:background="#4CAF50" />
		<Button
			android:id="@+id/b2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Noodles"
			android:background="#4CAF50" />
	</GridLayout>
</LinearLayout>