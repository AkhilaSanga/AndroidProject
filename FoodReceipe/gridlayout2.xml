<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".GridLayout"
	android:orientation="vertical">

	<GridLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:rowCount="3"
		android:columnCount="2"
		android:layout_gravity="center">
		<ImageView
			android:id="@+id/img1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/fried_chicken" />
		<ImageView
			android:id="@+id/img2"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/mutton_biryani" />
		<Button
			android:id="@+id/b1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Fried Chicken"
			android:background="#4CAF50" />
		<Button
			android:id="@+id/b2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Mutton Biryani"
			android:background="#4CAF50" />
		<ImageView
			android:id="@+id/img3"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/chicken_lolipop" />
		<ImageView
			android:id="@+id/img4"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/mutton-curry" />
		<Button
			android:id="@+id/b3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Chicken_Lolipop"
			android:background="#4CAF50" />
		<Button
			android:id="@+id/b4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Mutton Curry"
			android:background="#4CAF50" />
		<ImageView
			android:id="@+id/img5"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/mutton-keema" />
		<ImageView
			android:id="@+id/img6"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/fried-fish" />
		<Button
			android:id="@+id/b1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Mutton Keema"
			android:background="#4CAF50" />
		<Button
			android:id="@+id/b2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Fried Fish"
			android:background="#4CAF50" />
	</GridLayout>
</LinearLayout>